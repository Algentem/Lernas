							<td><p>papa</p></td>
							<td><p>matr.o</p></td>
							<td><p>mama</p></td>
							<td><p>vir.o</p></td>
							<td><p>mulier.o</p></td>
							<td><p>maskul.a</p></td>
							<td><p>femin.a</p></td>
						</tr>
						<tr>
							<td><p style="color: #F2711C">English</p></td>
